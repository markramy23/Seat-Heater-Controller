#include "temp_sensor.h"

float tempSensor_readTemp(tempSensor_sensortype* sensor)
{
    uint16 adcValue;
    float temp;
    ADC0_changeChannel(sensor->adc_channel);
    ADC0_startConversion();
    while(ADC0_busy());
    adcValue = ADC0_readValue();
    temp = (float)(((double)adcValue*ADC_REF_VOLTAGE)/ADC_MAX_VALUE);
    return temp;
}


